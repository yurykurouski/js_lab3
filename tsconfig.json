{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/api/*": ["./src/api/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/exceptions/*": ["./src/exceptions/*"],
      "@/facade/*": ["./src/facade/*"],
      "@/factories/*": ["./src/factories/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/services/*": ["./src/services/*"],
      "@/state/*": ["./src/state/*"],
      "@/types/*": ["./src/types/*"],
      "@/view/*": ["./src/view/*"],
      "@/tests/*": ["./src/tests/*"],
      "@/observers/*": ["./src/observers/*"],
      "@/router/*": ["./src/router/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
}